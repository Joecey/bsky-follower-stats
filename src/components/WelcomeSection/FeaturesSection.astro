---
const features = [
	{
		title: 'Easy to understand statistics ',
		description: 'Understand your performance and your impact on Bluesky',
	},
	{
		title: 'Get to know your community',
		description: 'See your followers and their interests',
	},
	{
		title: 'No sign in required',
		description: 'Built using the free Bluesky API and @atproto ',
	},
]
---

<section id="features" class="my-16 w-full">
	<h2 class="w-full text-center text-xl md:text-3xl">What's in store for you?</h2>
	<div id="feature-content-wrapper" class="mt-4 flex flex-col gap-4 md:flex-row">
		{
			features.map((feature) => {
				return (
					<div class="flex flex-col rounded-lg bg-sky-200/30 p-2 shadow-md md:w-1/3 md:items-center">
						<h3 class="w-full text-left text-lg text-sky-600">{feature.title}</h3>
						<p class="w-full text-left text-base">{feature.description}</p>
					</div>
				)
			})
		}
	</div>
</section>

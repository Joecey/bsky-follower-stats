---
import '@fontsource/outfit'
import '@fontsource/domine'

const { title } = Astro.props
import { ClientRouter } from 'astro:transitions'
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ClientRouter />
	</head>
	<body>
		<main
			class="flex min-h-full flex-col items-center justify-center prose-headings:font-heading"
		>
			<slot />
		</main>
	</body>
</html>

<style>
	@tailwind base;
	@tailwind components;
	@tailwind utilities;
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
